/* 我的权益 */
.nav{
  padding: 30rpx;
}
.nav .nav-list{
  position: relative;
  border-radius: 8rpx;
  background-color: #fff;
}
.nav .nav-list .nav-item{
  position: relative;
  padding: 25rpx 20rpx;
  font-size: 30rpx;
  color: #444444;
  border-bottom: 1rpx solid #F2F3F2;
}
.nav .nav-list .nav-item:last-child{
  border-bottom: 0rpx;
}
.nav .nav-list .nav-item .left .icon{
  width: 50rpx;
  height: 50rpx;
  background-color: #f2f2f2;
}
.nav .nav-list .nav-item .left .name{
  margin-left: 10rpx;
}
.nav .nav-list .nav-item .arrow{
  width: 30rpx;
  height: 30rpx;
}