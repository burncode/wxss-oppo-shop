page{
  width: 100%;
  height: 100%;
  background-color: #F5F6F5;
}
.bg-color{
  position: absolute;
  width: 100%;
  height: 65%;
  z-index: -1;
}
.bg-color2{
  position: absolute;
  top:40%;
