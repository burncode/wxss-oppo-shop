/* pages/my/member/privilege-detail/privilege-detail.wxss */
page{
  background-color: #fff;
}
.header{
  width: 100%;
  height: 350rpx;
  padding: 0 50rpx;
  background: linear-gradient(270deg,#2dc8a9,#2ec2c3) 50%/cover;
  box-sizing: border-box;
}
.header .content{
  height: 100%;
  box-sizing: border-box;
}
.header .content .title{
  color: #fff;
}
.header .content .title .main-title{
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.header .content .title .sub-title{
  font-size: 30rpx;
}
.header .icon-privlege{
  width: 200rpx;
  height: 200rpx;
  background-color: #fff;
  background: url(http://wx.oppo.cn/static/img/priviega.7f08.png) no-repeat;
  background-size: auto 200rpx;
}
.privilege{
  margin-top: 20rpx;
  padding: 30rpx;
}
.privilege .block{
  margin-bottom: 50rpx;
}
.privilege .block .name{
  margin-bottom: 20rpx;
}
.privilege .block .content{
  line-height: 1.5;
  font-size: 30rpx;
  color: #888;
}