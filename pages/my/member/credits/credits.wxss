/* pages/my/member/credits/credits.wxss */
page{
  background-color: #f5f5f5;
}
.bg1{
  position: absolute;
  width: 100%;
  height: 600rpx;
  background: linear-gradient(270deg, #2dc8a9, #2ec2c3) 50%/cover; 
  z-index: -1;
}
.bg2{
  position: absolute;
  top: 400rpx;
  width: 100%;
  height: 200rpx;
  background: linear-gradient(0deg,#f5f5f5,hsla(0,0%,96%,0)) 50%/cover;
  z-index: 0;
}
.top{
  padding: 100rpx 0 50rpx;
  /* background: linear-gradient(270deg, #2dc8a9, #2ec2c3) 50%/cover; */
}
.top .title {
  position: relative;
}
.top .title .amount{
  position: relative;
  font-size: 100rpx;
  color: #fff;
}
.top .title .desc{
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #f5f5f5;
}

.list{
  position: relative;
  margin-top: 20rpx;
}
.list .item{
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.list .item .item-a{
  padding: 0 15rpx;
  background-color: #fff;
  border-radius: 8rpx;
  border:1rpx solid #f2f2f2;
}
.list .item .header{
  padding: 20rpx 0;
  font-size: 26rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.list .item .header .month{
  color: #2dc8a9;
}
.list .item .header .count{
  color: #888;
}
.list .item .record{
  padding: 20rpx 0;
}
.list .item .content{
  padding: 25rpx 0;
  border-bottom: 1rpx solid #e6e6e6;
}
.list .item .des{
  margin-bottom: 10rpx;
}
.list .item .createTime{
  color: #888;
  font-size: 25rpx;
}
.list .item .content .amount{
  color: #2dc8a9;
}

.nothing{
  margin-top: 40rpx;
  color: #868686;
}