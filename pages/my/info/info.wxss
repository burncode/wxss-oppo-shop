/* pages/my/info/info.wxss */
.header{
  padding: 30rpx 30rpx;
  background-color: #fff;
}
.header .headUrl{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
}
.header .headUrl image{
  width: 100%;
  height: 100%;
}
.header .user-info{
  position:relative;
  -webkit-align-self:stretch;
  align-self:stretch;
  -webkit-flex:1;
  flex:1;
  overflow:hidden;
  display:-webkit-flex;
  display:flex;
  -webkit-flex-direction:column;
  flex-direction:column;
  -webkit-justify-content:center;
  justify-content:center;
  margin-left:20rpx;
  margin-right: 20rpx;
}
.header .user-info .name{
  font-size: 34rpx;
  font-weight: 500;
  padding-bottom: 10rpx;
}
.header .user-info .member{
  font-size: 28rpx;
  color: #888;
}
.header .btn{
  width: 100rpx;
  padding: 15rpx 0;
  font-size: 26rpx;
}

.nav-list{
  position: relative;
  margin-top: 20rpx;
}
.nav-list .nav-item{
  position: relative;
  padding: 30rpx;
  background-color: #fff;
}
.nav-list .nav-item::after{
  content:" ";
  position:absolute;
  left:30rpx;
  bottom:-1px;
  right:0;
  height:1px;
  border-top:1rpx solid #e5e5e5;
  color:#d9d9d9;
}
.nav-list .nav-item:last-child:after{
  height:0rpx;
  border-top:0rpx;
}
.nav-list .nav-item .title{
  font-size: 28rpx;
  font-weight:500;
}
.nav-list .nav-item .icon{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 50%;
  right: 30rpx;
  margin: -15rpx 0;
}