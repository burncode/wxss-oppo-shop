/* pages/my/coupon/coupon-list/coupon-list.wxss */
@import "../../../../components/coupon-list/coupon-list.wxss";
.header{
  padding: 25rpx 0 0 30rpx;
  background-color: #ffffff;
}
.header .top{
  padding-right: 30rpx;
}
.header .top .shops-coverimg{
  width: 160rpx;
  height: 160rpx;
}
.header .top .shops-coverimg image{
  width: 100%;
  height: 100%;
}
.header .top .info{
  position:relative;
  -webkit-align-self:stretch;
  align-self:stretch;
  -webkit-flex:1;
  flex:1;
  overflow:hidden;
  display:-webkit-flex;
  display:flex;
  -webkit-flex-direction:column;
  flex-direction:column;
  margin-left: 20rpx;
}
.header .top .info .shops-name{
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.header .top .info .control-no{
  color: #858585;
  font-size: 27rpx;
}
.header .bottom{
  margin-top: 25rpx;
  padding: 25rpx 30rpx 25rpx 0;
  border-top:1rpx solid #ddd;
}
.header .bottom .location{
  padding-right: 10rpx;
  line-height: 1.4;
}
.header .bottom .location image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.header .bottom .icon{
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
  box-sizing: border-box;
}
.header .bottom .icon image{
  width: 100%;
  height: 100%;
}
.header .bottom .cutting-line{
  width: 2rpx;
  height: 40rpx;
  margin: 0 20rpx;
  background-color: #ddd;
}
.coupon .coupon-right{
  background-color: #ffffff;
}
.triangle-border-right .circular0{
  left: -1.8px;
}
.triangle-border-right .circular1{
  left: -1.8px;
}
.triangle-border-right .i {
  border-right:3px solid #f5f5f5;
  border-radius: 50%;
}
.coupon .coupon-right .coupon-btn{
  border: 2px solid #05b570;
}

.coupon-nothing{
  padding:40rpx 0 20rpx;
  text-align: center;
  font-size: 30rpx;
  color: #888;
}

.coupon-explain{
  margin-top: 30rpx;
  padding: 0 30rpx;
}
.coupon-explain .title{
  font-size: 28rpx;
}
.coupon-explain .remark{
  padding-top: 10rpx;
  color: #858585;
  line-height: 1.4;
}

.shop-list{
  position: relative;
  margin-top: 30rpx;
  padding-left: 30rpx;
  margin-bottom: 30rpx;
  background-color: #ffffff;
}
.shop-list .title{
  padding: 25rpx 0;
  color: #A8A8A8;
}
.shop-list .list .shop-item{
  padding-bottom: 25rpx;
  padding-right: 30rpx;
  margin-bottom: 25rpx;
  border-bottom: 1rpx solid #ddd;
}
.shop-list .list .shop-item:last-child{
  border-bottom: none;
}
.shop-list .list .shop-item .shops-coverimg{
  width: 120rpx;
  height: 120rpx;
}
.shop-list .list .shop-item .shops-coverimg image{
  width: 100%;
  height: 100%;
}
.shop-list .list .shop-item .info{
  position:relative;
  -webkit-align-self:stretch;
  align-self:stretch;
  -webkit-flex:1;
  flex:1;
  overflow:hidden;
  display:-webkit-flex;
  display:flex;
  -webkit-flex-direction:column;
  flex-direction:column;
  -webkit-justify-content:center;
  justify-content:center;
  margin-left: 20rpx;
}
.shop-list .list .shop-item .shops-name{
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.shop-list .list .shop-item .address{
  color: #858585;
  font-size: 27rpx;
}
.map{
  height: 400rpx;
  margin: 30rpx 0;
  padding: 0 30rpx;
}
.map #map{
  width: 100%;
  height: 100%;
  /* border: 1rpx solid #ccc; */
}