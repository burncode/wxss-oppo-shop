/* pages/my/coupon/coupon-details/coupon-details.wxss */
page{
  background-color: #f3f5f7;
}
.header{
  position: relative;
  padding: 0 30rpx;
}
.coupon-details{
  position: relative;
  margin-top: 30rpx;
}
.coupon-details .content{
  position: relative;
  padding: 50rpx 30rpx;
  margin-bottom: 80rpx;
  color: #fff;
  text-align: center;
  background-color: #05b570;
}
.coupon-details .content .top-right{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
}
.share{
  padding:0;
  margin:0;
  background-color:#05b570;
  color:#fff;
  border:none;
  line-height: normal;
}
.share::after{
  border: none;
}
.coupon-details .content .name{
  font-size: 38rpx;
  font-weight: 500;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.coupon-details .content .time{
  font-size: 26rpx;
}
.coupon-details .coupon-btn{
  width: 200rpx;
  margin: 0 auto;
}
.coupon-details .coupon-btn .btn{
  font-size: 27rpx;
  padding: 20rpx 0;
  color: #fff;
  background-color:#05b570; 
  border:1rpx solid #05b570;
}
.coupon-details .get-coupon-num{
  padding: 30rpx 0;
  text-align: center;
  color: #888;
  font-size: 26rpx;
}

.shop-list{
  position: relative;
}
.shop-list .title{
  padding: 30rpx 30rpx;
  color: #888;
  font-size: 26rpx;
}
.shop-list .list{
  padding:0 0 0 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #dddddd;
  border-bottom: 1rpx solid #dddddd;
}
.shop-list .list .item{
  padding: 25rpx 0;
  border-bottom: 1rpx solid #dddddd;
}
 .shop-list .list .item:last-child{
  border-bottom: none;
} 
.shop-list .list .left .shop-icon{
  width:80rpx;
  height:80rpx;
}
.shop-list .list .left .shop-icon image{
  width: 100%;
  height: 100%;
}
.shop-list .list .left .info{
  padding: 0 20rpx;
  font-size: 28rpx;
}
.shop-list .list .right{
  width: 200rpx;
}
.shop-list .list .goto-btn{
  width:150rpx;
  padding:10rpx 0;
  border-radius:40rpx;
  font-size:26rpx;
  color: #fff;
  border:1px solid #05b570;
  background-color: #05b570;
  text-align:center;
}

/* 使用说明对话框 */
.modal{
  position: fixed;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  background:rgba(0,0,0,.3);
  z-index: 99999;
}
.modal-content{
  width: 520rpx;
  min-height: 620rpx;
  max-height: 700rpx;
  background: #fff;
  border-radius: 10rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}
.modal-content scroll-view{
  position: absolute;
  width: 100%;
  height: 100%;
  padding: 20rpx 20rpx 120rpx 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.modal-content .remark{
  color: #858585;
  line-height: 1.5;
}
.modal-btn{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  box-shadow: 0 2px 10px rgba(0,0,0,.15);
  z-index: 9;
}
.modal-btn .btn-1{
  width: 150rpx;
  height: 70rpx;
  padding: 0 15rpx;
  line-height: 70rpx;
  text-align:center;
  color: #fff;
  background-color: #05b570;
  border-radius: 40rpx;
}