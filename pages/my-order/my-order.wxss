/* pages/my-order/my-order.wxss */
@import "../../components/nothing/nothing.wxss";
.nav{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  background-color: #fff;
  z-index: 9;
}
.nav .item text{
  height: 100%;
  font-size: 30rpx;
}
.nav .item text.active{
  color: #f10215;
}
.order-list{
  position: relative;
  margin-top: 100rpx;
}
.order-list .order-item{
  margin-bottom: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.order-list .order-item .top{
  font-size: 26rpx;
  padding:30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.order-list .order-item .top .top-item .tit{
  color: #9E9E9E;
}
.order-list .order-item .top .top-item .status{
  color: #E93B3D;
}
.order-list .order-item .top .top-item .time{
  color: #333;
  font-size: 26rpx;
}
.order-list .order-item .bottom{
  position: relative;
  padding: 30rpx 30rpx;
  border-top: 1rpx solid #e5e5e5;
}
.order-list .order-item .bottom .bottom-item:last-child{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translate(0%, -50%)
}
.order-list .order-item .bottom .btn{
  width: 120rpx;
  padding: 12rpx 0;
  font-size: 24rpx;
}
.order-list .order-item .bottom .btn.pay{
  color: #fff;
  background-color: #E64340;
  border: 1rpx solid #B83633;
}
.order-list .order-item .bottom .tit{
  color: #9E9E9E;
}
.order-list .order-item .bottom .amount{
  color: #333;
}
.order-list .order-item .bottom .btn{
  margin-right: 10rpx;
}
.order-list .order-item .bottom .btn:last-child{
  margin-right: 0rpx;
}
.order-list .order-item-a.warranty{
  padding: 30rpx 30rpx 30rpx 60rpx;
}
.order-list .order-item-a.warranty .cover-img{
  width: 100rpx;
  height: 100rpx;
}
.order-list .order-item-a.shop .content{
  padding: 10rpx 30rpx 10rpx 10rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.order-list .order-item-a.shop .content:last-child{
  border-bottom: 0rpx;
}
.order-list .order-item .cover-img{
  width: 200rpx;
  height: 200rpx;
}
.order-list .order-item .cover-img image{
  width: 100%;
  height: 100%;
}
.order-list .order-item .order-info{
  position:relative;
  -webkit-align-self:stretch;
  align-self:stretch;
  -webkit-flex:1;
  flex:1;
  overflow:hidden;
  display:-webkit-flex;
  display:flex;
  -webkit-flex-direction:column;
  flex-direction:column;
  -webkit-justify-content:center;
  justify-content:center;
  margin-left: 10rpx;
}
.order-list .order-item-a.warranty .order-info{
  margin-left: 30rpx;
}
.order-list .order-item .order-info .name{
  padding-bottom: 20rpx;
  font-size: 32rpx;
}
.order-list .order-item-a.warranty .name{
  padding-bottom: 10rpx;
  font-size: 30rpx;
}
.order-list .order-item .order-info .price{
  font-size: 30rpx;
}

.order-list .order-item .order-info .p{
  padding: 6rpx 0;
}
.order-list .order-item .order-info .name{
  font-size: 30rpx;
}
.order-list .order-item .order-info .p .right{
  color: #858585;
}
.order-list .order-item .order-info .complimentary .tag{
  font-size: 24rpx;
  padding: 6rpx 10rpx;
  margin-right: 5rpx;
  color: #008E5B;
  border: 1rpx solid #008E5B;
  transform:scale(.9);
  -webkit-transform:rotate(.9); /* Safari å’Œ Chrome */
}

.nothing{
  margin-top: 140rpx;
}