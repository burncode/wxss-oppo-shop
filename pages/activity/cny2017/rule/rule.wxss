.rule{    
    background: #c5263e;
    border-radius: 30rpx;
    width: 86%;
    height: 86%;
    padding: 20rpx;
    position: absolute;
    left: 50%;
    top: 52%;
    transform: translateX(-50%) translateY(-50%);
    -webkit-transform: translateX(-50%) translateY(-50%);
    text-align: center;
}
.txt{color: #f3cf9d; font-size: 25rpx;line-height: 35rpx;text-align: left;}
.title{width: 184rpx;height: 49rpx;margin: 20rpx 0 10rpx 0;}
.btnBack{width: 292rpx;height: 81rpx; margin-top: 15rpx;}
.pic{width: 80%}
.scrollBar{height: 100%;position: absolute;right: 22rpx;top: 0; width: 8rpx}
.scrollBar .bar{background: #f3cf9d;width: 100%; border-radius: 4rpx;position: absolute;left: 0;top: 0;}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
