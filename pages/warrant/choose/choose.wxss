page{
  background: #fff;
}
.oppo-logo{
  width: 152rpx;
  height: 70rpx;
  position: absolute;
  z-index: 999;
  top: 0;
  right: 75rpx;
}
.oppo-logo image{
  width: 100%;
  height: 100%;
}
.praise-content{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow-y: scroll;
}
.praise-content .praise-title{
  width: 635rpx;
  height: 113rpx;
  margin-top: 96rpx;
  margin-left: 60rpx;
}
.praise-content .praise-title image{
  width: 100%;
  height: 100%;
}
.praise-content .praise-list{
  width: 615rpx;
  margin: 60rpx auto 40rpx auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.praise-content .praise-list .praise-item.active{
  background: #f7c945;
  color: #fff;
}
.praise-content .praise-list .praise-item{
  width: 243rpx;
  text-align: center;
  background: #fff;
  height: 69rpx;
  border-radius: 50rpx;
  line-height: 69rpx;
  margin-bottom: 30rpx;
  color: #46bd71;
  font-size: 28rpx;
  padding: 0 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-shadow: 1rpx 1rpx 40rpx rgba(0,0,0,.2)
}
.praise-input .praise-input-po{
  font-size: 24rpx;
  color: #a0a0a0;
}
.praise-input{
  width: 615rpx;
  margin: 0 auto;
}
.praise-input .praise-input-tips{
  width: 100%;
  text-align: right;
  font-size: 20rpx;
  color: #ffffff;
  margin-top: 7rpx;
}
.praise-input .placeholder-ta{
  width: 560rpx;
  height: 163rpx;
  padding:20rpx;
  border: 6rpx solid #46bd71;
  border-radius: 10rpx;
  font-size: 24rpx;
  background: #fff;
  color: #46bd71;
}
.praise-input textarea{
  width: 560rpx;
  height: 163rpx;
  padding:20rpx;
  border: 6rpx solid #46bd71;
  border-radius: 10rpx;
  font-size: 24rpx;
  background: #fff;
  color: #46bd71;
}
.praise-sub-btn{
  width: 450rpx;
  height: 90rpx;
  background: #edfff3;
  text-align: center;
  line-height: 90rpx;
  margin: 40rpx auto 80rpx auto;
  border-radius: 50rpx;
  font-size: 36rpx;
  color: #46bd71;
  font-weight: bolder;
  box-shadow: 1rpx 10rpx 40rpx rgba(0,0,0,.2)
}
.dialog-box{
  position: fixed;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  background:rgba(0,0,0,.3);
  z-index: 99999;
}
.dialog-box .dialog-content{
  width: 650rpx;
  padding: 60rpx 0;
  background: #fff;
  border-radius: 10rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}
.dialog-box .dialog-content .close{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: -20rpx;
  top: -20rpx;
}
.dialog-box .dialog-content .close image{
  width: 100%;
  height: 100%;
}
.dialog-box .dialog-content .dialog-image{
  width: 550rpx;
  height: 550rpx;
  overflow-y: scroll;
  margin: 0 auto;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #5b5b5b;
}
.dialog-box .dialog-content .dialog-text{
  width: 550rpx;
  margin: 0 auto;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #5b5b5b;
}
.guize-btn{
  width: 150rpx;
  height:50rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  z-index: 999;
  left: 0;
  top: 40rpx;
  background: #41a96f;
  line-height: 50rpx;
  border-radius: 0 50rpx 50rpx 0;
}
.guize-pic{
  width: 100%;
  height: 1178rpx;
}