}
.auth-form .auth-sub-list .auth-sub-point-po{
  font-size: 26rpx;
}
.auth-form .auth-sub-list input{
  flex: 1;
  font-size: 26rpx;
}
.auth-form .auth-sub-list .scan-btn{
  width: 57rpx;
  height: 57rpx;
  border-radius: 100rpx;
}
.auth-form .auth-sub-list .scan-btn image{
  width: 100%;
  height: 100%;
}
