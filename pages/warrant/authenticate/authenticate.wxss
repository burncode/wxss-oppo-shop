  border: none;
  background: none;
  width: 480rpx;
  height: 124rpx;
  margin: 35rpx auto 0 auto;
  padding: 0;
}
.auth-sub-btn image{
  width: 480rpx;
  height: 124rpx;
}

.dialog-box{
  position: fixed;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  background:rgba(0,0,0,.3);
  z-index: 99999;
}
.dialog-box .dialog-content{
  width: 650rpx;
  padding: 60rpx 0;
  background: #fff;
  border-radius: 10rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}
.dialog-box .dialog-content .close{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: -20rpx;
  top: -20rpx;
}
.dialog-box .dialog-content .close image{
  width: 100%;
  height: 100%;
}
.dialog-box .dialog-content .dialog-image{
  width: 550rpx;
  height: 550rpx;
  overflow-y: scroll;
  margin: 0 auto;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #5b5b5b;
}
.dialog-box .dialog-content .dialog-text{
  width: 550rpx;
  margin: 0 auto;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #5b5b5b;
}
.enterIntro,.enterMyArr{
  width: 400rpx;
  background: #20c68b;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  height: 60rpx;
  border-radius: 50rpx;
  line-height: 60rpx;
  margin: 20rpx auto 0 auto;
}
