  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 38rpx;
}
.clause-box .radio-btn{
  
}
.clause-box .radio-btn image{
  width: 31rpx;
  height: 31rpx;
}
.clause-box .clause-text{
  margin-left: 12rpx;
  font-size: 20.72rpx;
  color: #989898;
}
.auth-sub-btn::after{
  border: none;
  background: none;
}
